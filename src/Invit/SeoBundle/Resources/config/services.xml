<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="invit.seo.page" class="Invit\SeoBundle\Seo\SeoPage">
            <argument type="service" id="translator" />
            <argument />
         </service>

        <service id="invit.seo.twig.extension" class="Invit\SeoBundle\Twig\Extension\SeoExtension" public="false">
           <tag name="twig.extension" />

           <argument type="service" id="invit.seo.page" />
            <argument>%invit.seo.page.encoding%</argument>
        </service>

    </services>
</container>
